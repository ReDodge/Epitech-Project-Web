<%- include("../admin/_headerad") -%>

<h1>Modify an user</h1>
<% for (const people of model) { %>
<form action="/connectad/people/people_edit/<%= people.id %>" method="post">
  <div class="form-horizontal">


    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="Prenom">FirstName</label>
        <div class="col-sm-7">
          <input class="form-control" name="Prenom" value="<%= people.fname %>" required/>
        </div>
      </div>
      
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="Nom">Name</label>
        <div class="col-sm-7">
          <input class="form-control" name="Nom" value="<%= people.sname %>" required/>
        </div>
      </div>
      
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="Email">Email</label>
        <div class="col-sm-7">
          <input class="form-control" name="Email" value="<%= people.emailu %>" required/>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="Phone">Phone</label>
        <div class="col-sm-7">
          <input class="form-control" name="Phone" value="<%= people.phone %>" required/>
        </div>
      </div>
      
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="Username">Username</label>
        <div class="col-sm-7">
          <input class="form-control" name="Username" value="<%= people.username %>" required/>
        </div>
      </div>
      
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="Password">Password</label>
        <div class="col-sm-7">
          <input readonly class="form-control" name="Password" value="<%= people.password %>" required/>
        </div>
      </div>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Modifier" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/connectad/people">Cancel</a>
      </div>
    </div>
  </div>
</form>
<% } %>
<%- include("../admin/_footerad") -%>
