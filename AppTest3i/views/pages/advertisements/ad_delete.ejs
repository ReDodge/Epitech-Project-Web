<%- include("../admin/_headerad") -%>

<h2>Delete an ad</h2>
<% for (const advertisements of model) { %>
<form action="/connectad/advertisements/ad_delete/<%= advertisements.advert_id %>" method="post">
  <div class="form-horizontal">


    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="title">Title</label>
        <div class="col-sm-7">
          <input readonly class="form-control" name="title" value="<%= advertisements.advert_title %>" />
        </div>
      </div>
      
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="advert_pdate">Post Date</label>
        <div class="col-sm-7">
          <input readonly class="form-control" name="advert_pdate" value="<%= advertisements.advert_pdate %>" />
        </div>
      </div>
    
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="advert_startdate">Start Date</label>
        <div class="col-sm-7">
          <input readonly class="form-control" name="advert_startdate" value="<%= advertisements.advert_startdate %>" />
        </div>
      </div>
    
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="presentation">Presentation</label>
        <div class="col-sm-7">
          <input readonly class="form-control" name="presentation" value="<%= advertisements.advert_presentation %>" />
        </div>
      </div>

      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="contractcat">Contract Cat</label>
        <div class="col-sm-7">
          <input readonly class="form-control" name="contractcat" value="<%= advertisements.advert_contractcat %>" />
        </div>
      </div>

      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="pay">Pay</label>
        <div class="col-sm-7">
          <input readonly 
          class="form-control" name="pay" value="<%= advertisements.advert_pay %>" />
        </div>
      </div>

      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="comp_id">Compagny id</label>
        <div class="col-sm-7">
          <input readonly class="form-control" name="comp_id" value="<%= advertisements.compa_id %>"/>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Effacer" class="btn btn-default btn-danger" />
        <a class="btn btn-outline-dark cancel" href="/connectad/advertisements">Cancel</a>
      </div>
    </div>
  </div>
</form>
<% } %>
<%- include("../admin/_footerad") -%>
