<%- include("../admin/_headerad") -%>

<h2>Modify an ad</h2>
<% for (const advertisements of model) { %>
<form action="/connectad/advertisements/ad_edit/<%= advertisements.advert_id %>" method="post">
  <div class="form-horizontal">


    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="title">Title</label>
        <div class="col-sm-7">
          <input class="form-control" name="title" value="<%= advertisements.advert_title %>" required/>
        </div>
      </div>
      
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="advert_pdate">Post Date</label>
        <div class="col-sm-7">
          <input class="form-control" name="advert_pdate" value="<%= advertisements.advert_pdate %>" required/>
        </div>
      </div>
    
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="advert_startdate">Start Date</label>
        <div class="col-sm-7">
          <input class="form-control" name="advert_startdate" value="<%= advertisements.advert_startdate %>" required/>
        </div>
      </div>
    
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="presentation">Presentation</label>
        <div class="col-sm-7">
          <input class="form-control" name="presentation" value="<%= advertisements.advert_presentation %>" required/>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="contractcat">Contract Cat</label>
        <div class="col-sm-7">
          <select class="form-control" id="exampleFormControlSelect1" name="contractcat" value="<%= advertisements.advert_contractcat %>">
            <option><%= advertisements.advert_contractcat %></option>
            <option>CDI</option>
            <option>CDD</option>
            <option>STAGE</option>
          </select>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="pay">Pay</label>
        <div class="col-sm-7">
          <input class="form-control" name="pay" value="<%= advertisements.advert_pay %>"required />
        </div>
      </div>

      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="comp_id">Compagny id</label>
        <div class="col-sm-7">
          <select class="form-control" id="exampleFormControlSelect1" name="comp_id">
            <% for (const advertisements of model) { %> 
             <option value="<%= advertisements.compa_id %>"><%= advertisements.comp_name %></option>
             <% } %>
           </select>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Modifier" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/connectad/advertisements">Cancel</a>
      </div>
    </div>
  </div>
</form>
<% } %>
<%- include("../admin/_footerad") -%>
