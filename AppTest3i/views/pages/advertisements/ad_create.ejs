<%- include("../admin/_headerad") -%>

<h2>Add an ad</h2>

<form action="/connectad/advertisements/ad_create" method="post">
  <div class="form-horizontal">

    
<div class="form-group row">
  <label class="col-form-label col-sm-2" for="title">Title</label>
  <div class="col-sm-7">
    <input class="form-control" name="title" value="<%= model.advert_title %>" required/>
  </div>
</div>


<div class="form-group row">
  <label class="col-form-label col-sm-2" for="advert_pdate">Publication Date</label>
  <div class="col-sm-7">
    <input type="date" class="form-control" name="advert_pdate" value="<%= model.advert_pdate %>" required/>
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="advert_startdate">Start Date</label>
  <div class="col-sm-7">
    <input type="date" class="form-control" name="advert_startdate" value="<%= model.advert_startdate %>" required/>
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="presentation">Presentation</label>
  <div class="col-sm-7">
    <input class="form-control" name="presentation" value="<%= model.advert_presentation %>" required/>
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="contractcat">Category</label>
  <div class="col-sm-7">
    <select class="form-control" id="exampleFormControlSelect1" name="contractcat" value="<%= model.advert_contractcat %>">
      <option>CDI</option>
      <option>CDD</option>
      <option>STAGE</option>
    </select>
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="pay">Pay</label>
  <div class="col-sm-7">
    <input class="form-control" name="pay" value="<%= model.advert_pay %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="comp_id">Companies ID</label>
   <div class="col-sm-7">
    <select class="form-control" id="exampleFormControlSelect1" name="comp_id" value="<%= model.comp_id%>">
     <% for (const compagnies of model) { %> 
      <option value="<%= compagnies.comp_id %>"><%= compagnies.comp_name %></option>
      <% } %>
    </select>
  </div>
</div>   
    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Ajouter" class="btn btn-default btn-success" />
        <a class="btn btn-outline-dark cancel" href="/connectad/companies">Cancel</a>
      </div>
    </div>
  </div>
</form>

<%- include("../admin/_footerad") -%>