<!-- ========================================MAIN============================================= -->

    <main>

  <!-- ==========Offer======= -->
    <% for (const information of model) { %> 
     <div class=" offer row col-sm-7">
        <h3 class="mx-auto"><u><%= information.advert_contractcat%> - <%= information.advert_title %> </u></h3>
        <div class="row">
          <h5 class="text-left col-sm-6"><i class="fas fa-building"></i> <u> <%= information.comp_name %></u></h5>
          <h6 class=" text-right col-sm-6"><u>Published le: <%= information.advert_pdate %></u></h6> 
        </div>
       <h6><i class="fas fa-map-marker-alt "></i>  <u> <%= information.comp_city %> <%= information.comp_ZIP %>  <%= information.comp_adresse %> </u></h6>
      
        
        <div id="information" class="collapse" aria-labelledby="headingOne" data-parent=".offer">
          <div class="border-top my-3"></div>
          
          <p><u class="font-weight-bold">Start date of the contrat:</u> <%= information.advert_startdate %></p>
          <p><u class="font-weight-bold">Salary:</u> <%= information.advert_pay%> €/mois</p>

          <p><u class="font-weight-bold">Presentation of the job:</u></p>
          <p> <%= information.advert_presentation %></p>
            
        </div>
        <div class="hide">
          <div class="border-top my-3"></div>
          <form action="" method="post">
            <div class="row">
              <div class="form col">
                <label for="inputfname">First name</label>
                <input type="text" class="form-control" id="inputfname" name="fname" placeholder="First name" required value="<%= information.fname %>" >
              </div>
              <div class="form col">
                <label for="inputname">Last Name</label>
                <input type="text" class="form-control" id="inputname" name="name" placeholder="Last name"  required value="<%= information.sname %>">
              </div>
            </div>
            <div class="row">
            <div class="form col">
              <label for="inputEmail">Email</label>
              <input type="email" class="form-control" id="inputEmail"name="email" placeholder="Email" required value="<%= information.emailu %>">
            </div>
            <div class="form col">
              <label for="inputnumber">Phone Number</label>
              <input type="tel" class="form-control" id="inputnumber"name="phone" placeholder="Phone Number" required value="<%= information.phone %>">
            </div>
          </div>
          <input type="hidden" id="custId" name="id" value="<%= information.advert_id %>">
          <input type="hidden" id="custId" name="user_id" value="<%= information.id %>">
          <div class="submit text-center">
            <button type="submit" class="btn btn-primary waves-effect">Apply</button>
          </div>
          </form>
        </div>
        <div class="row">
          <div class="col-sm-3"></div>
            <button type="button" class="learnmore btn btn-link btn-primary col-sm-1.7" >Learn More</button>
            <form action="/appliance" method="post" class="col-sm-2">
            <button type="submit" class="apply btn btn-light waves-effect">Apply</button>
            </form>
          <div class="col-sm-3"></div>
        </div>
    </div>
 <% } %>  

</main>

