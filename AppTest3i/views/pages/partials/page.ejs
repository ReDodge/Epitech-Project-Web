<script type="text/javascript" >
  $(document).ready(function(){
    $('.learnmore').click(function(){
      $(this).parent().parent().find('#information').slideToggle();
      var $this = $(this);
      $this.toggleClass('learnmore');
      if($this.hasClass('learnmore')){
        $this.text('Learn More');
      } else {
        $this.text('Learn Less');
      }
    });
    $('.apply').click(function(){
      $(this).parent().parent().find('.hide').slideToggle();
      var $this = $(this);
      $this.toggleClass('apply');
      if($this.hasClass('apply')){
        $this.text('Apply');
      } else {
        $this.text('Cancel');
      }
    });
    });
    </script>
