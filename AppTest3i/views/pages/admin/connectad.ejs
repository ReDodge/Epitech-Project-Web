<%- include("../partials/_header") -%>

<div class="container">
    <div class="row">
      <div class="col-md-5 mx-auto">
        <div class="log">
        <div id="first">
          <div class="myform form ">
            <div class="logo mb-3">
              <div class="col-md-12 text-center">
                <h3>Login Admin</h3>
              </div>
            </div>
            <form action="/connectad/authad" method="post">
            <!-- A remplir -->
              <div class="form-group">
                <i class="fa fa-user" aria-hidden="true"></i> <label for="exampleInputEmail1">Admin Username</label>
                <input type="text" name="adminname"  class="form-control" aria-describedby="usernameHelp" placeholder="Enter Your Admin Name" required>
              </div>
              <div class="form-group">
                <i class="fa fa-lock" aria-hidden="true"></i> <label for="exampleInputEmail1">Admin Password</label>
                <input type="password" name="adminpass" class="form-control" aria-describedby="passwordlHelp" placeholder="Enter Your Admin Password" required>
              </div>
              <div>
              <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
              <% } %>
            </div>
            <!-- Conditions -->
              <div class="form-group">
                <p class="text-center">By logging in, you accept our <a href="#">Terms of Use</a></p>
              </div>
            <!-- Submit -->
              <div class="col-md-12 text-center ">
                <button type="submit" name="login" class=" btn btn-block mybtn btn-primary tx-tfm">Login</button>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</div>


<%- include("../partials/_footer") -%>
